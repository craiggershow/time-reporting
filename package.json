{
  "name": "time-reporting",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start": "npm-run-all --sequential db:start db:setup --parallel start:*",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "db:start": "./scripts/postgres.sh start",
    "db:stop": "./scripts/postgres.sh stop",
    "db:setup": "cd backend && npm run prisma:generate && npm run prisma:migrate && sleep 2 && npm run db:seed",
    "build": "npm-run-all --parallel build:*",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "expo-constants": "~17.0.5"
  }
}
